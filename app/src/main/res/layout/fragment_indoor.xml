<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/indoor_layout">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="32sp"
        android:text="You are not Indoor"
        android:id="@+id/indoor_title"
        android:layout_marginTop="30dp"/>



    <RelativeLayout
        android:id="@+id/loadingPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginTop="30dp"
        android:gravity="center">

        <ProgressBar
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:indeterminate="true" />

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
       android:id="@+id/ll_ecsplain">
    <TextView
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="When you enter in a place with indoor connection, you will know where your car is Parked with PARKDROID. \n This is a list of authoriced centers:"/>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:rowCount="1"
        android:columnCount="2"
        android:layout_marginTop="30dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp">

        <ImageView
           android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/ic_home_black_24dp"
            android:layout_columnSpan="1"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:src="@drawable/lasalle_centro_univ"
            android:layout_columnSpan="1"/>


    </GridLayout>


    </LinearLayout>

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        card_view:cardBackgroundColor="@color/colorPrimaryDark"
        card_view:cardCornerRadius="8dp"
        card_view:cardElevation="8dp"
        android:id="@+id/card"
        android:visibility="gone">

        <!-- Main Content View -->
        <RelativeLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/colorWhite"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="40dp"
                android:text="Plaça de Parking: "
                android:layout_marginRight="40dp"
                android:id="@+id/Carrer"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Carrer"
                android:layout_marginTop="10dp"
                android:textSize="25sp"
                android:textColor="@color/colorAccent"
                android:text="L·3"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="20dp"
                android:id="@+id/distancia"
                android:gravity="center"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/colorWhite"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="40dp"
                android:text="Planta: "
                android:layout_marginRight="40dp"
                android:id="@+id/title"
                android:layout_below="@+id/distancia"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:textColor="@color/colorAccent"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="40dp"
                android:text="4"
                android:layout_marginRight="40dp"
                android:id="@+id/planta"
                android:layout_below="@+id/title"
                android:gravity="center"/>


        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>